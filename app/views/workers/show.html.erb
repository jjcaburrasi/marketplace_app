<div class='container'>
    <div class='show-card'>
        <% if (current_admin || current_client) %>
            <%= link_to 'Back to workers', workers_path%>
        <%end%>
        <div class='worker-card'>
            Name: <%= @worker.name %><br>
            E-Mail: <%= @worker.email %><br>
            Currently status: <%= @worker.working ? "Currently working" : "Currently not working" %><br>
            Availability status: <%= @worker.available ? "Available" : "Not Available" %><br>
            Skills:<br>
            <%@worker.skills.each do |skill| %>
                <p><%= skill %></p><br>
                <% end %>

            <%if current_admin %>
            Rehirable status: <%= !@worker.rehirable ? "Rehirable" : "Not Rehirable" %><br>

            <% end %>
        </div>
    </div>

</div>