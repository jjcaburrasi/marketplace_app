<div class="container">
<% if !current_client%>
    <h2> All Workers </h2>
    <div class='cards'>
        <%@workers.each do |worker|%>
            <div class='card'>
                <%= link_to worker.name, worker_path(worker) %>
            </div>
        <%end%>
<% elsif current_client %>
 <h2> Available Workers </h2>
 <%= form_with url: "/search_workers", method: :get do |f| %>
    <%= f.label :skills %><br />
    <% array_skills = ['Driving License', 'Tech', 'Construction', "Own motorcycle", "Work rotatory turn", "English",
    "Spanish", "Capacity to load heavy weights", "Disability certificate"]%>
    <% array_skills.each do |skill|%>
    <%= f.check_box :skills, {multiple: true}, skill, nil %>
    <%= f.label skill%>
    <%end%>

   <%= f.submit "Search", class: "btn btn-primary" %>
<% end %>
<br>
 <div class='cards'>
    <%@workers.each do |worker|%>
        <div class='card'>
            <%= link_to worker.name, worker_path(worker) %>   
        </div>
    <%end%>
<%end%>
    </div>
</div>